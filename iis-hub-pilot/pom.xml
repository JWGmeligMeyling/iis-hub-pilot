    <profiles>
        <profile>
            <id>integration-test-invoke</id>
            <activation>
                <property>
                    <name>!skipTests</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>process-it-components</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <ant antfile="${project.build.scriptSourceDirectory}/ant-hub-it.xml" target="hub-it-process-components"
                                            inheritRefs="true" useNativeBasedir="true"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>integration-test</id>
                                <goals>
                                    <goal>integration-test</goal>
                                </goals>
                                <configuration>
                                    <addTestClassPath>true</addTestClassPath>
                                    <noLog>true</noLog>
                                    <pomIncludes>
                                        <pomInclude>${project.artifactId}-it/pom.xml</pomInclude>
                                    </pomIncludes>
                                    <projectsDirectory>${project.build.itDirectory}</projectsDirectory>
                                    <showErrors>true</showErrors>
                                    <streamLogs>true</streamLogs>
                                </configuration>
                            </execution>
                            <execution>
                                <id>verify</id>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
