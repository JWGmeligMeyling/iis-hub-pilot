            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <additionalClasspathElements>
                        <additionalClasspathElement>${project.build.directory}/${project.artifactId}-test</additionalClasspathElement>
                        <additionalClasspathElement>${project.build.directory}/${project.artifactId}</additionalClasspathElement>
                        <additionalClasspathElement>${project.build.directory}/${project.artifactId}-test/WEB-INF/classes</additionalClasspathElement>
                        <additionalClasspathElement>${project.build.directory}/${project.artifactId}/WEB-INF/classes</additionalClasspathElement>
                    </additionalClasspathElements>
                    <workingDirectory>${project.build.directory}/${project.artifactId}-test</workingDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <configuration>
                            <suiteXmlFiles>
                                <suiteXmlFile>${project.build.testngDirectory}/testng-hub.xml</suiteXmlFile>
                            </suiteXmlFiles>
                            <systemPropertyVariables>
                                <hub.log.context.name>${project.artifactId}-test</hub.log.context.name>
