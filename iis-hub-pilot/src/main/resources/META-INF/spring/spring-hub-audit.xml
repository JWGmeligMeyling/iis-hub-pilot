<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:amq="http://activemq.apache.org/schema/core"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:jms="http://www.springframework.org/schema/jms"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/jms http://www.springframework.org/schema/jms/spring-jms.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = ACTIVEMQ BROKER SERVICES
    =====================================================================================================-->
    <beans:bean id="brokerService" class="org.apache.activemq.broker.BrokerService" abstract="true"
        p:enableStatistics="true"
        p:persistent="false"
        p:schedulerSupport="false"
        p:useJmx="false"
        p:useShutdownHook="false">
        <beans:property name="managementContext">
            <beans:bean class="org.apache.activemq.broker.jmx.ManagementContext"
                p:createConnector="false"
                p:createMBeanServer="false"
                p:useMBeanServer="false"/>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="brokerServiceAudit" parent="brokerService"
        p:brokerName="brokerAudit">
        <beans:property name="transportConnectors">
            <beans:list>
                <beans:bean class="org.apache.activemq.broker.TransportConnector"
                    p:enableStatusMonitor="true"
                    p:uri="nio://#{ T(java.net.InetAddress).localHost.hostName }:0?closeAsync=false"/>
            </beans:list>
        </beans:property>
    </beans:bean>
    
    <beans:bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" depends-on="brokerServiceAudit"
        p:targetClass="gov.hhs.onc.iishubpilot.crypto.HubCryptoProviders"
        p:targetMethod="resetProviders"/>
    
    <!--====================================================================================================
    = ACTIVEMQ QUEUES
    =====================================================================================================-->
    <beans:bean id="queue" class="org.apache.activemq.command.ActiveMQQueue" abstract="true"/>
    
    <beans:bean id="queueAudit" parent="queue"
        p:physicalName="queueAudit"/>
    
    <!--====================================================================================================
    = JMS CONNECTION FACTORIES
    =====================================================================================================-->
    <beans:bean id="connFactoryJms" class="javax.jms.ConnectionFactory" abstract="true"/>
    
    <!--====================================================================================================
    = JMS CONNECTION FACTORIES: ACTIVEMQ
    =====================================================================================================-->
    <beans:bean id="connFactoryJmsActiveMq" class="org.apache.activemq.spring.ActiveMQConnectionFactory" parent="connFactoryJms" abstract="true"/>
    
    <beans:bean id="connFactoryJmsActiveMqAudit" parent="connFactoryJmsActiveMq" depends-on="brokerServiceAudit"
        p:brokerURL="vm://#{ brokerServiceAudit.brokerName }?create=false"/>
    
    <!--====================================================================================================
    = JMS CONNECTION FACTORIES: CACHING
    =====================================================================================================-->
    <beans:bean id="connFactoryJmsCaching" class="org.springframework.jms.connection.CachingConnectionFactory" parent="connFactoryJms" abstract="true"/>
    
    <beans:bean id="connFactoryJmsCachingAudit" parent="connFactoryJmsCaching"
        p:targetConnectionFactory-ref="connFactoryJmsActiveMqAudit"/>
    
    <!--====================================================================================================
    = JMS TRANSACTION MANAGEMENT
    =====================================================================================================-->
    <beans:bean id="mgrTxJms" class="org.springframework.jms.connection.JmsTransactionManager" parent="mgrTx" abstract="true"
        p:rollbackOnCommitFailure="true"
        p:validateExistingTransaction="true"/>
    
    <beans:bean id="mgrTxJmsAudit" parent="mgrTxJms"
        p:connectionFactory-ref="connFactoryJmsCachingAudit"/>
    
    <!--====================================================================================================
    = JMS TEMPLATES
    =====================================================================================================-->
    <beans:bean id="templateJms" class="org.springframework.jms.core.JmsTemplate" abstract="true"/>
    
    <beans:bean id="templateJmsAudit" parent="templateJms" abstract="true">
        <beans:constructor-arg name="connectionFactory" ref="connFactoryJmsCachingAudit"/>
    </beans:bean>
    
    <beans:bean id="templateJmsAuditSubmitSingleMsg" parent="templateJmsAudit"
        p:messageConverter-ref="auditEventConvSubmitSingleMsg"/>
    
    <!--====================================================================================================
    = JMS MESSAGE LISTENER CONTAINERS
    =====================================================================================================-->
    <beans:bean id="listenerMsgContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer" abstract="true"/>
    
    <beans:bean id="auditEventContainer" parent="listenerMsgContainer" abstract="true"
        p:concurrentConsumers="5"
        p:connectionFactory-ref="connFactoryJmsCachingAudit"
        p:destination-ref="queueAudit"
        p:maxConcurrentConsumers="20"
        p:transactionManager-ref="mgrTxJmsAudit"/>
    
    <beans:bean id="auditEventContainerSubmitSingleMsg" parent="auditEventContainer"
        p:messageListener-ref="auditEventListenerSubmitSingleMsg"/>
</beans:beans>