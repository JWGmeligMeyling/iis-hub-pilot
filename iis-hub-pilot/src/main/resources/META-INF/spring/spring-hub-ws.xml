<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:cxf="http://cxf.apache.org/core"
    xmlns:cxf-http="http://cxf.apache.org/transports/http/configuration"
    xmlns:cxf-jaxws="http://cxf.apache.org/jaxws"
    xmlns:cxf-policy="http://cxf.apache.org/policy"
    xmlns:cxf-sec="http://cxf.apache.org/configuration/security"
    xmlns:cxf-soap="http://cxf.apache.org/bindings/soap"
    xmlns:cxf-wsa="http://cxf.apache.org/ws/addressing"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:sws="http://www.springframework.org/schema/web-services"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
        http://cxf.apache.org/transports/http/configuration http://cxf.apache.org/schemas/configuration/http-conf.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
        http://cxf.apache.org/policy http://cxf.apache.org/schemas/policy.xsd
        http://cxf.apache.org/configuration/security http://cxf.apache.org/schemas/configuration/security.xsd
        http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd
        http://cxf.apache.org/ws/addressing http://cxf.apache.org/schemas/ws-addr-conf.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/web-services http://www.springframework.org/schema/web-services/web-services.xsd">
    
    <!--====================================================================================================
    = FEATURES
    =====================================================================================================-->
    <beans:bean id="feature" class="org.apache.cxf.feature.AbstractFeature" abstract="true"/>
    
    <!--====================================================================================================
    = BUS
    =====================================================================================================-->
    <beans:bean id="bus" class="org.apache.cxf.Bus" abstract="true"/>
    
    <beans:bean id="busSpring" class="org.apache.cxf.bus.spring.SpringBus" parent="bus" abstract="true"/>
    
    <!--====================================================================================================
    = INTERCEPTORS
    =====================================================================================================-->
    <beans:bean id="interceptor" class="org.apache.cxf.interceptor.Interceptor" abstract="true"/>
    
    <!--====================================================================================================
    = PHASE INTERCEPTORS
    =====================================================================================================-->
    <beans:bean id="interceptorPhase" class="org.apache.cxf.phase.PhaseInterceptor" parent="interceptor" abstract="true"/>
    
    <beans:bean id="interceptorXmlCdata" class="gov.hhs.onc.iishubpilot.interceptor.impl.CdataAwareXmlInterceptor" parent="interceptorPhase">
        <beans:constructor-arg name="cdataElemQnames">
            <util:set>
                <beans:bean class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean"
                    p:targetClass="gov.hhs.onc.iishubpilot.xml.HubXmlQnames"
                    p:targetField="CXF_FAULT_STACKTRACE"/>
            </util:set>
        </beans:constructor-arg>
    </beans:bean>
    
    <!--====================================================================================================
    = SERVERS
    =====================================================================================================-->
    <beans:bean id="server" class="org.apache.cxf.endpoint.Server" abstract="true"/>
    
    <beans:bean id="serverHub" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" parent="server"
        p:targetMethod="create">
        <beans:property name="targetObject">
            <beans:bean class="org.apache.cxf.jaxws.JaxWsServerFactoryBean" parent="server"
                p:address="/IISHubService"
                p:bindingConfig-ref="soapBinding12"
                p:bus-ref="busHub"
                p:dataBinding-ref="dataBindingJaxb"
                p:serviceBean-ref="iisServiceHub"
                p:wsdlLocation="/META-INF/wsdl/cdc-iis-hub.wsdl">
                <beans:property name="outFaultInterceptors">
                    <util:list>
                        <beans:ref bean="interceptorFaultStacktrace"/>
                        <beans:ref bean="interceptorXmlCdata"/>
                    </util:list>
                </beans:property>
                <beans:property name="outInterceptors">
                    <util:list>
                        <beans:ref bean="interceptorXmlCdata"/>
                    </util:list>
                </beans:property>
                <beans:property name="properties">
                    <util:map id="serverHubProps">
                        <!--suppress SpringPlaceholdersInspection -->
                        <beans:entry key="#{ T(gov.hhs.onc.iishubpilot.ws.HubMessageContextProperties).FAULT_STACKTRACE_ENABLED }"
                            value="${hub.mode.dev.active}"/>
                        <beans:entry key="#{ T(org.apache.cxf.message.Message).SCHEMA_VALIDATION_ENABLED }"
                            value="#{ T(org.apache.cxf.annotations.SchemaValidation.SchemaValidationType).BOTH }"/>
                    </util:map>
                </beans:property>
            </beans:bean>
        </beans:property>
    </beans:bean>
    
    <beans:beans profile="!hub.mode.dev">
        <!--====================================================================================================
        = BUS
        =====================================================================================================-->
        <!--suppress DuplicatedBeanNamesInspection -->
        <beans:bean id="busHub" parent="busSpring"/>
    </beans:beans>
    
    <beans:beans profile="hub.mode.dev">
        <!--====================================================================================================
        = BUS
        =====================================================================================================-->
        <!--suppress DuplicatedBeanNamesInspection -->
        <beans:bean id="busHub" parent="busSpring">
            <beans:property name="features">
                <beans:list merge="true">
                    <beans:bean class="org.apache.cxf.feature.LoggingFeature" parent="feature"/>
                </beans:list>
            </beans:property>
        </beans:bean>
    </beans:beans>
</beans:beans>